{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "name": "Recipes",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "private": false,
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "notes": {
      "type": "richtext"
    },
    "time": {
      "type": "integer"
    },
    "quantity": {
      "type": "integer"
    },
    "tags": {
      "collection": "tags",
      "via": "recipes",
      "dominant": true
    },
    "steps": {
      "type": "richtext"
    },
    "ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "recipes.ingredients"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "recipes"
    }
  }
}
